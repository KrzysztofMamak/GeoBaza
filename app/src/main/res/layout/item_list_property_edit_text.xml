<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorPrimary">

    <TextView
            android:id="@+id/tv_editable_property_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_margin"
            android:layout_marginStart="@dimen/default_padding_margin_x"
            android:layout_marginEnd="@dimen/default_padding_margin_x"
            android:textColor="@color/light_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Adres"/>

    <EditText
            android:id="@+id/et_editable_property_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@null"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/white"
            android:inputType="text"
            android:layout_marginTop="@dimen/default_padding_margin"
            android:layout_marginBottom="@dimen/default_padding_margin"
            android:layout_marginStart="@dimen/default_padding_margin_x"
            android:layout_marginEnd="@dimen/default_padding_margin_x"
            app:layout_constraintTop_toBottomOf="@id/tv_editable_property_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="autoFill"/>

</androidx.constraintlayout.widget.ConstraintLayout>