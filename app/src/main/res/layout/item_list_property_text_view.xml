<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

    <TextView
            android:id="@+id/tv_property_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_margin"
            android:layout_marginStart="@dimen/default_padding_margin_x"
            android:layout_marginEnd="@dimen/default_padding_margin_x"
            android:textSize="@dimen/text_big"
            android:textColor="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_property_value"
            tools:text="Powiat"/>

    <TextView
            android:id="@+id/tv_property_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_margin"
            android:layout_marginStart="@dimen/default_padding_margin_x"
            android:layout_marginEnd="@dimen/default_padding_margin_x"
            android:layout_marginBottom="@dimen/default_padding_margin"
            android:textSize="@dimen/text_huge"
            android:textColor="@color/colorTextOnPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_property_name"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="WodzisÅ‚awski"/>

    <ImageView
            android:id="@+id/iv_property_edit"
            android:contentDescription="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/default_padding_margin"
            android:layout_marginBottom="@dimen/default_padding_margin"
            android:layout_marginEnd="@dimen/default_padding_margin_x"
            android:src="@drawable/ic_edit"
            android:tint="?attr/colorSecondary"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>