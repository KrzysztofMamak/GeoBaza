<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_padding_margin"
        android:paddingBottom="@dimen/default_padding_margin"
        android:paddingStart="@dimen/default_padding_margin_x"
        android:paddingEnd="@dimen/default_padding_margin_x"
        android:background="@color/colorPrimary">

    <TextView
            android:id="@+id/tv_field_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_huge"
            android:textColor="@color/colorTextOnPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_field_name"
            tools:text="WodzisÅ‚awski"/>

    <TextView
            android:id="@+id/tv_field_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_big"
            android:textColor="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_field_value"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Powiat"/>

</androidx.constraintlayout.widget.ConstraintLayout>