<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/colorTextOnPrimary"
            app:tabIndicatorHeight="1.6dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorTextOnPrimary"
            app:tabTextColor="@color/colorTextOnPrimary" />

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

</LinearLayout>