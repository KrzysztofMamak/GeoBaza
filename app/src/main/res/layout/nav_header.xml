<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary">

    <ImageView
            android:id="@+id/iv_background_icons"
            android:contentDescription="@null"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/background_geo_icons_no_frame"
            android:tint="?attr/colorSecondaryDark"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/iv_app_logo"
            android:contentDescription="@null"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="@dimen/default_padding_margin_xxh"
            android:src="@drawable/ic_compass"
            android:tint="?attr/colorSecondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/iv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_padding_margin_x"
            android:text="@string/app_name"
            android:textColor="?attr/colorSecondary"
            android:textSize="@dimen/text_header_small"
            app:layout_constraintStart_toEndOf="@id/iv_app_logo"
            app:layout_constraintTop_toTopOf="@id/iv_app_logo"
            app:layout_constraintBottom_toBottomOf="@id/iv_app_logo"/>

</androidx.constraintlayout.widget.ConstraintLayout>