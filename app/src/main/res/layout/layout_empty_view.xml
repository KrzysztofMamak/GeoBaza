<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_empty_view"
            android:contentDescription="@string/cd_empty_view_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_empty_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/ic_no_data"/>

    <TextView
            android:id="@+id/tv_empty_view"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_huge"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/iv_empty_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Usluga nie odpowiada. sprobuj ponownie pozniej"/>

</androidx.constraintlayout.widget.ConstraintLayout>